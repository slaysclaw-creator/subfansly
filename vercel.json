{
  "name": "fanplace.io",
  "version": 2,
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "framework": "nextjs",
  "env": {
    "DATABASE_URL": {
      "description": "PostgreSQL connection string",
      "required": true
    },
    "JWT_SECRET": {
      "description": "JWT secret key for authentication",
      "required": true
    },
    "NEXT_PUBLIC_API_URL": {
      "description": "API base URL",
      "required": false,
      "default": "https://fanplace.io"
    },
    "NEXT_PUBLIC_STRIPE_KEY": {
      "description": "Stripe publishable key",
      "required": false
    },
    "STRIPE_SECRET_KEY": {
      "description": "Stripe secret key",
      "required": false
    }
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"]
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "status": 404
    }
  ]
}
